<script src="/javascripts/posts.js" type="text/javascript"></script>

<a class="btn-floating btn-large waves-effect waves-light green" href="/makePost"><i class="material-icons">add</i></a>

{{#each allPosts}}
    <div id="post" class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{this.title}}</span>
                    <p>{{this.body}}</p>
                    <br>
                    <p>-{{this.firstName}}</p>
                </div>
                <div class="card-action">
                    <a class="waves-effect waves-light btn" href="/comments">Comments</a>
                    {{#if this.edit}}
                        <a href="/posts/editPost/{{this.postId}}" class="editBtn waves-effect waves-light btn" value="{{this.postId}}" title="{{this.title}}" body="{{this.body}}">{{this.edit}}</a>
                    {{/if}}
                    {{#if this.delete}}
                        <a class="deleteBtn waves-effect waves-light btn" value="{{this.postId}}">{{this.delete}}</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{/each}}